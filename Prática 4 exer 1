<!DOCTYPE html>
<html>
<head>
  <title>Contagem Crescente</title>
</head>
<body>
  <h1>Contagem Crescente</h1>

  <button onclick="contar()">Iniciar Contagem</button>

  <script>
    function contar() {
      const numero = parseInt(prompt("Digite um número inteiro positivo:"));

      if (isNaN(numero) || numero <= 0) {
        alert("Por favor, digite um número inteiro positivo válido.");
        return;
      }

      for (let i = 1; i <= numero; i++) {
        alert(i);
      }
    }
  </script>
</body>
</html>
